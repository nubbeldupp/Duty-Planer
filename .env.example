# Application Configuration
APP_NAME=OnCallDutyPlanner
APP_ENV=production
APP_KEY=base64:your_app_key_here
APP_DEBUG=false
APP_URL=https://oncallduty.yourcompany.com

# Database Configuration
DB_CONNECTION=pgsql
DB_HOST=database
DB_PORT=5432
DB_DATABASE=on_call_duty_planner
DB_USERNAME=app_user
DB_PASSWORD=secure_database_password

# Email Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.yourcompany.com
MAIL_PORT=587
MAIL_USERNAME=noreply@yourcompany.com
MAIL_PASSWORD=secure_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourcompany.com
MAIL_FROM_NAME="${APP_NAME}"

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Security
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# Feature Flags
SCHEDULE_CHANGE_APPROVAL_REQUIRED=true
MULTI_TEAM_ASSIGNMENT_ENABLED=true

# Performance
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
